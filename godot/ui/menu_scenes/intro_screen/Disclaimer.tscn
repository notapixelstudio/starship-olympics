script/source = "extends Control
#Â we are going to give explicit consent here

onready var anim = $Disclaimer/AnimationPlayer
signal okay
func _ready():
	visible = false
	
func start():
	visible = true
	anim.play(\"Appear\")
	yield(anim, \"animation_finished\")
	$\"%YES\".grab_focus()
	
func disappear():
	anim.play_backwards(\"Appear\")
	yield(anim, \"animation_finished\")
	persistance.save_game()
	print(\"Statistics are now : \", global.enable_analytics)
	emit_signal(\"okay\")
	queue_free()


func _on_YES_pressed():
	global.enable_analytics = true
	disappear()


func _on_NO_pressed():
	global.enable_analytics = false
	disappear()


func _on_MORE_pressed():
	global.enable_analytics = true
	disappear()
"

