@export var ship : Ship
@export var blocks_tile_map : BlocksTileMap

func _process(delta: float) -> void:
	var ship_pos = to_local(ship.global_position + Vector2(150,0).rotated(ship.global_rotation))
	var ship_ipos = local_to_map(ship_pos)
	clear()
	if blocks_tile_map.get_cell_source_id(ship_ipos) == -1:
		set_cell(ship_ipos, 3, Vector2i(0,1))
	else:
		set_cell(ship_ipos, 3, Vector2i(1,1))
"

